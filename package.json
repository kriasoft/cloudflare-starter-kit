{
  "name": "app",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "packageManager": "yarn@4.0.0-rc.6",
  "workspaces": [
    "api",
    "core",
    "site"
  ],
  "scripts": {
    "postinstall": "husky install && node ./scripts/postinstall.js",
    "lint": "eslint --cache --report-unused-disable-directives .",
    "test": "node --experimental-vm-modules $(yarn bin jest)",
    "build": "rollup -c --environment BABEL_ENV:production",
    "deploy": "yarn workspaces foreach run deploy",
    "api:build": "rollup -c --environment TARGET:api,BABEL_ENV:production",
    "api:deploy": "yarn api:build && zx ./scripts/cf.js api publish",
    "api:cf": "zx ./scripts/cf.js api",
    "site:build": "rollup -c --environment TARGET:site,BABEL_ENV:production",
    "site:deploy": "yarn site:build && zx ./scripts/cf.js site publish",
    "site:cf": "zx ./scripts/cf.js site"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.18.2",
    "@babel/plugin-proposal-class-properties": "^7.17.12",
    "@babel/plugin-proposal-object-rest-spread": "^7.18.0",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-typescript": "^7.17.12",
    "@babel/register": "^7.17.7",
    "@cloudflare/workers-types": "^3.11.0",
    "@emotion/babel-plugin": "^11.9.2",
    "@emotion/eslint-plugin": "^11.7.0",
    "@jest/globals": "^28.1.0",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@types/babel__core": "^7.1.19",
    "@types/babel__preset-env": "^7.9.2",
    "@types/eslint": "^8.4.2",
    "@types/jest": "^27.5.1",
    "@types/lodash": "^4.14.182",
    "@types/minimist": "^1.2.2",
    "@types/node": "^17.0.38",
    "@types/prettier": "^2.6.3",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "babel-jest": "^28.1.0",
    "babel-loader": "^8.2.5",
    "babel-plugin-replace-import-extension": "^1.1.3",
    "chalk": "^5.0.1",
    "del": "^6.1.1",
    "envars": "^0.4.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "execa": "^6.1.0",
    "form-data": "^4.0.0",
    "globby": "^13.1.1",
    "got": "^12.1.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "lodash": "^4.17.21",
    "miniflare": "^2.5.0",
    "minimist": "^1.2.6",
    "prettier": "^2.6.2",
    "pretty-bytes": "^6.0.0",
    "rollup": "^2.75.4",
    "typescript": "^4.7.2",
    "whatwg-fetch": "^3.6.2",
    "wrangler": "^2.0.7",
    "zx": "^6.1.0"
  },
  "resolutions": {
    "chalk@npm:^5.0.1": "^4.1.2"
  },
  "envars": {
    "cwd": "./env"
  },
  "jest": {
    "cacheDirectory": ".cache/jest",
    "testPathIgnorePatterns": [
      "<rootDir>/.cache/",
      "<rootDir>/.github/",
      "<rootDir>/.husky/",
      "<rootDir>/.vscode/",
      "<rootDir>/.yarn/",
      "<rootDir>/*/dist/",
      "<rootDir>/scripts/"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "mjs",
      "cjs",
      "jsx",
      "ts",
      "tsx",
      "json",
      "node"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/*/dist/"
    ],
    "setupFiles": [
      "<rootDir>/test/setup.ts"
    ],
    "transform": {
      "\\.ts$": "babel-jest"
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ]
  },
  "eslintConfig": {
    "env": {
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "overrides": [
      {
        "files": [
          "*.ts",
          ".tsx"
        ],
        "parser": "@typescript-eslint/parser",
        "extends": [
          "plugin:@typescript-eslint/recommended"
        ],
        "plugins": [
          "@typescript-eslint"
        ],
        "parserOptions": {
          "warnOnUnsupportedTypeScriptVersion": true
        }
      },
      {
        "files": [
          "*.test.ts"
        ],
        "env": {
          "jest": true
        }
      },
      {
        "files": [
          "babel.config.cjs",
          "rollup.config.mjs",
          "scripts/**/*.js",
          "test/**/*.ts"
        ],
        "env": {
          "node": true
        }
      }
    ],
    "ignorePatterns": [
      "/.cache",
      "/.git",
      "/.husky",
      "/.yarn",
      "/*/dist",
      "/public/js/vendor"
    ]
  }
}
