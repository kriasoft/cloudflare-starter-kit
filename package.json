{
  "name": "root",
  "version": "0.0.0",
  "packageManager": "yarn@4.0.0-rc.39",
  "private": true,
  "type": "module",
  "workspaces": [
    "api",
    "app",
    "edge"
  ],
  "scripts": {
    "postinstall": "husky install && node ./scripts/postinstall.js",
    "start": "yarn node --experimental-vm-modules $(yarn bin zx) ./scripts/start.js",
    "cf": "zx ./scripts/cf.js",
    "lint": "eslint --cache --report-unused-disable-directives .",
    "test": "node --experimental-vm-modules $(yarn bin jest)",
    "build": "yarn workspaces foreach run build",
    "deploy": "yarn workspaces foreach run deploy",
    "app:start": "yarn workspace app run start",
    "app:build": "yarn workspace app run build",
    "app:preview": "yarn workspace app run preview",
    "api:cf": "yarn workspace api run cf",
    "api:build": "yarn workspace api run build",
    "api:deploy": "yarn workspace api run build && yarn workspace api run deploy",
    "edge:cf": "yarn workspace edge run cf",
    "edge:build": "yarn workspace edge run build",
    "edge:deploy": "yarn workspaces foreach -tR --from '{app,edge}' run build && yarn workspace edge run deploy",
    "g:rollup": "rollup",
    "g:tsc": "tsc"
  },
  "devDependencies": {
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.12",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@cloudflare/workers-types": "^3.19.0",
    "@emotion/babel-plugin": "^11.10.6",
    "@emotion/eslint-plugin": "^11.10.0",
    "@jest/globals": "^29.4.3",
    "@jest/types": "^29.4.3",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@types/babel__core": "^7.20.0",
    "@types/babel__preset-env": "^7.9.2",
    "@types/eslint": "^8.21.1",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.13.0",
    "@types/prettier": "^2.7.2",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "babel-jest": "^29.4.3",
    "babel-plugin-replace-import-extension": "^1.1.3",
    "envars": "^0.4.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "execa": "^6.1.0",
    "got": "^12.3.1",
    "husky": "^8.0.1",
    "jest": "^29.4.3",
    "jest-environment-miniflare": "^2.12.0",
    "miniflare": "^2.12.0",
    "prettier": "^2.8.4",
    "pretty-bytes": "^6.0.0",
    "rollup": "^3.15.0",
    "typescript": "^4.9.5",
    "vite": "^4.1.1",
    "whatwg-fetch": "^3.6.2",
    "wrangler": "^2.10.0",
    "zx": "^7.0.8"
  },
  "resolutions": {
    "chalk@npm:^5.0.1": "^4.1.2"
  },
  "envars": {
    "cwd": "./env"
  },
  "eslintConfig": {
    "env": {
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "overrides": [
      {
        "files": [
          "*.ts",
          ".tsx"
        ],
        "parser": "@typescript-eslint/parser",
        "extends": [
          "plugin:@typescript-eslint/recommended"
        ],
        "plugins": [
          "@typescript-eslint"
        ],
        "parserOptions": {
          "warnOnUnsupportedTypeScriptVersion": true
        }
      },
      {
        "files": [
          "*.test.ts"
        ],
        "env": {
          "jest": true
        }
      },
      {
        "files": [
          "app/vite.config.ts",
          "babel.config.cjs",
          "rollup.config.mjs",
          "scripts/**/*.js"
        ],
        "env": {
          "node": true
        }
      }
    ],
    "ignorePatterns": [
      "/.cache",
      "/.git",
      "/.husky",
      "/.yarn",
      "/dist"
    ]
  }
}
